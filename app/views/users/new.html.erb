<style type="text/css">
  .error{
    color: red;
    margin-top: -12px;
  }
</style>
<div class="border-form-div">
  <h2>Create New User</h2>

  <%= form_for(@user, :url => '/users/create', :method => :post) do |f| %>
    <%#= devise_error_messages! %>

    <div><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true %></div>

    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>
    <button class="btn-info btn btn-inverse" type="submit">Create User</button>
  <% end %>
  <br/>
  <%= link_to 'Back', space_vehicles_path, :class=> 'btn btn-default btn-sm', :confirm => "Are you sure?" %>
  <%= link_to "Reset", "#", :class=>'reset-btn btn btn-default btn-sm'%>
  <%#= render "devise/shared/links" %>
</div>

<%= render 'devise/shared/validate_user.js.erb' %>
